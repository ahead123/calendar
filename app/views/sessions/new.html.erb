<div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <br>
        <h1>Log In</h1>
        <br>
        <%= form_tag('/login', method: "post") do %>
        <div class="form-group">
        <%= text_field_tag :email, "email"  %>
        </div>
        
        <div class="form-group">
        <%= password_field_tag :password, "password" %>
        </div>
       
        <%=  submit_tag "Submit", class: "btn" %>
        <% end %>
      </div>
    </div>
</div>